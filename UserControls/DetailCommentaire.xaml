<UserControl
    x:Class="SAE_201_LOXAM.DetailCommentaire"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="500"
    mc:Ignorable="d">
    <Grid Background="White">
        <Viewbox Stretch="Uniform">
            <Border
                Margin="20"
                Padding="20"
                Background="#F7F7F7"
                BorderBrush="#CCCCCC"
                BorderThickness="1"
                CornerRadius="10">
                <StackPanel
                    Width="400"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                    <TextBlock
                        Margin="0,0,0,20"
                        FontSize="24"
                        FontWeight="Bold"
                        Foreground="#333"
                        Text="Détail du Commentaire"
                        TextAlignment="Center" />

                    <TextBlock
                        Margin="0,5"
                        FontSize="16"
                        Text="{Binding NomMateriel}" />
                    <TextBlock
                        Margin="0,5"
                        FontSize="16"
                        Text="{Binding Reference}" />

                    <TextBlock
                        Margin="0,10,0,0"
                        FontSize="16"
                        Foreground="#555"
                        Text="{Binding Commentaire}"
                        TextWrapping="Wrap" />

                </StackPanel>
            </Border>
        </Viewbox>
    </Grid>
</UserControl>
