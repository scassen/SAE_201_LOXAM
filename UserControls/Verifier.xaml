<UserControl
    x:Class="SAE_201_LOXAM.Verifier"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE_201_LOXAM"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Height="432"
    d:DesignWidth="800"
    Background="White"
    mc:Ignorable="d">

    <Grid>
        <!--  Bande rouge en haut  -->


        <!--  Conteneur principal sous la bande rouge  -->
        <Grid Margin="0,55,0,0">
            <TabControl Margin="0,-55,0,55">
                <!--  Onglet Location  -->
                <TabItem FlowDirection="RightToLeft" Header="Client">
                    <TabItem.Background>
                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                            <GradientStop Color="#FFF0F0F0" />
                            <GradientStop Offset="1" Color="#FFE5E5E5" />
                        </LinearGradientBrush>
                    </TabItem.Background>

                    <Grid
                        Height="350"
                        Background="#FFE5E5E5"
                        FlowDirection="LeftToRight">
                        <DataGrid
                            Height="348"
                            Margin="0,44,0,0"
                            VerticalAlignment="Top"
                            AutoGenerateColumns="False"
                            ItemsSource="{Binding FilteredClients}">
                            <DataGrid.Columns>
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding NumClient}"
                                    Header="Num client" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding NomClient}"
                                    Header="Nom" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding PrenomClient}"
                                    Header="Prénom" />
                            </DataGrid.Columns>
                        </DataGrid>

                        <Label
                            x:Name="Client_location_label"
                            Width="155"
                            Height="27"
                            Margin="182,-1,0,0"
                            Padding="5"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content="Rechercher par nom client :" />
                        <TextBox
                            x:Name="ClientLocationTextBox"
                            Width="120"
                            Margin="0,4,0,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            TextChanged="ClientLocationTextBox_TextChanged"
                            TextWrapping="Wrap" />

                    </Grid>
                </TabItem>

                <!--  Onglet Reservation  -->
                <TabItem Header="Reservation">
                    <Grid Height="395" Background="#FFE5E5E5">
                        <DataGrid
                            x:Name="dgVerifier"
                            Margin="0,50,0,-53"
                            AutoGenerateColumns="False"
                            CanUserAddRows="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding NumReservation}"
                                    Header="Num Reservation" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Client.NomClient}"
                                    Header="Nom Client" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Materiel.NomMateriel}"
                                    Header="Nom Materiel" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding DateReservation}"
                                    Header="DateReservation" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding DateDebutLocation}"
                                    Header="DateDebutLocation" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding DateRetourEffectiveLocation}"
                                    Header="DateRetourEffectiveLocation" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding DateRetourReelleLocation}"
                                    Header="DateRetourReelleLocation" />

                            </DataGrid.Columns>

                        </DataGrid>
                        <Label
                            x:Name="Client_reservation_label"
                            Margin="217,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content="Rechercher par numReservation:" />
                        <TextBox
                            x:Name="ClientReservationTextBox"
                            Width="120"
                            Margin="402,4,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            TextChanged="ClientReservationTextBox_TextChanged"
                            TextWrapping="Wrap" />
                        <Label
                            Margin="0,19,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content="Reservation de location :" />
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>


    </Grid>
</UserControl>
