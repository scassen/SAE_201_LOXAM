<UserControl
    x:Class="SAE_201_LOXAM.Verifier"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE_201_LOXAM"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Height="432"
    d:DesignWidth="800"
    Background="White"
    mc:Ignorable="d">

    <Grid>
    


        <Grid Margin="0,55,0,0">
            <TabControl Margin="0,-55,0,55">
       
                <TabItem Header="Reservation">
                    <Grid Height="395" Background="#FFE5E5E5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="25*" />
                            <ColumnDefinition Width="769*" />
                        </Grid.ColumnDefinitions>
                        <DataGrid
                            x:Name="dgVerifier"
                            Grid.ColumnSpan="2"
                            Margin="0,50,0,-53"
                            AutoGenerateColumns="False"
                            CanUserAddRows="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding NumReservation}"
                                    Header="Num Reservation" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Client.NomClient}"
                                    Header="Nom Client" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Materiel.NomMateriel}"
                                    Header="Nom Materiel" />



                            </DataGrid.Columns>

                        </DataGrid>
                        <Label
                            x:Name="Client_reservation_label"
                            Grid.Column="1"
                            Margin="364,-1,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content="Rechercher par numReservation:" />
                        <TextBox
                            x:Name="ClientReservationTextBox"
                            Grid.Column="1"
                            Width="120"
                            Margin="549,4,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            TextChanged="ClientReservationTextBox_TextChanged"
                            TextWrapping="Wrap" />
                        <Label
                            Grid.ColumnSpan="2"
                            Margin="0,19,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content="Reservation de location :" />
                        <Button
                            Grid.Column="1"
                            Margin="669,-3,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Background="#FFE62020"
                            Click="Button_Click"
                            Content="Supprimer" />
                        <Label
                            x:Name="Client_location_label_Copy"
                            Grid.Column="1"
                            Width="155"
                            Height="27"
                            Margin="67,-2,0,0"
                            Padding="5"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content="Rechercher par nom client :" />
                        <TextBox
                            x:Name="ClientLocationTextBox_Copy"
                            Grid.Column="1"
                            Width="120"
                            Margin="222,4,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            TextChanged="ClientLocationReservationTextBox_TextChanged"
                            TextWrapping="Wrap" />
                    </Grid>
                </TabItem>
                <TabItem FlowDirection="RightToLeft" Header="Client">
                    <TabItem.Background>
                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                            <GradientStop Color="#FFF0F0F0" />
                            <GradientStop Offset="1" Color="#FFE5E5E5" />
                        </LinearGradientBrush>
                    </TabItem.Background>

                    <Grid
                        Height="350"
                        Background="#FFE5E5E5"
                        FlowDirection="LeftToRight">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="39*" />
                            <ColumnDefinition Width="358*" />
                        </Grid.ColumnDefinitions>
                        <DataGrid
                            Grid.ColumnSpan="2"
                            Height="348"
                            Margin="0,44,0,0"
                            VerticalAlignment="Top"
                            AutoGenerateColumns="False"
                            ItemsSource="{Binding FilteredClients}">
                            <DataGrid.Columns>
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding NumClient}"
                                    Header="Num client" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding NomClient}"
                                    Header="Nom" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding PrenomClient}"
                                    Header="Prénom" />
                            </DataGrid.Columns>
                        </DataGrid>

                        <Label
                            x:Name="Client_location_label"
                            Grid.Column="1"
                            Width="155"
                            Height="27"
                            Margin="104,-1,0,0"
                            Padding="5"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content="Rechercher par nom client :" />
                        <TextBox
                            x:Name="ClientLocationTextBox"
                            Grid.Column="1"
                            Width="120"
                            Margin="259,4,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            TextChanged="ClientLocationTextBox_TextChanged"
                            TextWrapping="Wrap" />

                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>
        <Button
            Margin="797,24,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#FFE62020"
            Click="Button_Click_Valider"
            Content="valider" />


    </Grid>
</UserControl>
