<UserControl
    x:Class="SAE_201_LOXAM.Reserver"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE_201_LOXAM"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Height="371"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Margin="0,0,-52,0" Background="White">

        <Label
            Margin="144,23,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Rechercher par nom matériel : " />
        <TextBox
            x:Name="Filtre"
            Width="191"
            Margin="144,54,0,290"
            HorizontalAlignment="Left"
            Background="Snow"
            BorderBrush="Black"
            CaretBrush="White"
            TextChanged="Filtre_TextChanged"
            TextWrapping="Wrap" />

        <Button
            x:Name="Enregistrer"
            Width="216"
            Height="62"
            Margin="408,19,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="Red"
            BorderBrush="#FF060606"
            Click="Enregistrer_Click"
            Content="Enregistrer la réservation"
            FontFamily="Arial Rounded MT Bold"
            FontSize="14"
            Foreground="White" />

        <Button
            x:Name="Client"
            Width="176"
            Height="51"
            Margin="642,30,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="Red"
            BorderBrush="Black"
            Click="Client_Click"
            Content="Créer fiche client"
            FontFamily="Arial Rounded MT Bold"
            FontSize="16"
            Foreground="White" />

        <Label
            Margin="10,83,0,258"
            HorizontalAlignment="Left"
            Content="Location"
            FontWeight="Bold" />
        <Rectangle
            Width="802"
            Margin="0,176,0,0"
            HorizontalAlignment="Center"
            Stroke="Black" />

        <DataGrid
            x:Name="dgReserver"
            Margin="0,118,0,0"
            AutoGenerateColumns="False"
            ItemsSource="{Binding Materiels}"
            MouseDoubleClick="dgReserver_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding NomMateriel}"
                    Header="Nom du matériel" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Reference}"
                    Header="Référence" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding PrixJournee}"
                    Header="Prix journée" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding EtatMateriel}"
                    Header="Etat du Materiel" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding TypeMateriel.LibelleType}"
                    Header="Type" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding TypeMateriel.CategorieType}"
                    Header="Catégorie" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding CertificationsDisplay}"
                    Header="Certifications" />

            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</UserControl>
