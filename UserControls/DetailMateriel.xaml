<UserControl x:Class="SAE_201_LOXAM.DetailMateriel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="500">
    <Grid Background="White">
        <StackPanel>
            <TextBlock Text="Détail du matériel" FontWeight="Bold" FontSize="20" Margin="0,0,0,10"/>
            <TextBlock Text="{Binding NomMateriel}" FontSize="16"/>
            <TextBlock Text="{Binding Reference}" FontSize="16"/>
            <TextBlock Text="{Binding PrixJournee, StringFormat='Prix : {0} €'}" FontSize="16"/>
            <TextBlock Text="{Binding EtatMateriel}" FontSize="16"/>
            <TextBlock Text="{Binding TypeMateriel.LibelleType}" FontSize="16"/>
            <TextBlock Text="{Binding TypeMateriel.CategorieType}" FontSize="16"/>
            <TextBlock Text="{Binding CertificationsDisplay}" FontSize="16"/>
            <TextBlock Text="{Binding Description}" FontSize="16" TextWrapping="Wrap" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
