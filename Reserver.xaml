<UserControl
    x:Class="SAE_201_LOXAM.Reserver"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE_201_LOXAM"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:SAE_201_LOXAM"
    Height="371"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Background="White">

        <TextBox
            x:Name="Filtre"
            Width="191"
            Margin="29,54,0,297"
            HorizontalAlignment="Left"
            Background="Snow"
            BorderBrush="Black"
            CaretBrush="White"
            TextWrapping="Wrap" />
        <Label
            x:Name="Location"
            Margin="10,150,0,250"
            Content="Location" />
        <Rectangle
            Width="802"
            Margin="0,176,0,0"
            HorizontalAlignment="Center"
            Stroke="Black" />
        <DataGrid>
            <DataGrid.Columns />


        </DataGrid>

        <Label
            x:Name="Filtrer_label"
            Margin="41,20,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Rechercher par nom : " />
        <Button
            x:Name="Enregistrer"
            Width="186"
            Height="35"
            Margin="558,24,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="Red"
            BorderBrush="Red"
            Content="Enrengistrer la reservation"
            FontFamily="Arial Rounded MT Bold"
            Foreground="White" />
        <Button
            x:Name="Client"
            Width="130"
            Height="35"
            Margin="586,74,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="Red"
            BorderBrush="Red"
            Click="Client_Click"
            Content="Créer fiche client"
            FontFamily="Arial Rounded MT Bold"
            Foreground="White" />
        <Label
            x:Name="Nom_client_label"
            Margin="263,20,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Client existant : " />
        <TextBox
            x:Name="Client_box"
            Width="146"
            Margin="263,54,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            TextWrapping="Wrap" />
    </Grid>
</UserControl>
