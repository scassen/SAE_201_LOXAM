<UserControl
    x:Class="SAE_201_LOXAM.Reserver"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE_201_LOXAM"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Height="371"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Background="White">

        <Label
            Margin="41,20,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Rechercher par nom : " />
        <TextBox
            x:Name="Filtre"
            Width="191"
            Margin="29,54,0,290"
            HorizontalAlignment="Left"
            Background="Snow"
            BorderBrush="Black"
            CaretBrush="White"
            TextChanged="Filtre_TextChanged"
            TextWrapping="Wrap" />

        <Label
            Margin="263,20,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Client existant : " />
        <TextBox
            x:Name="Client_box"
            Width="146"
            Margin="263,54,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            TextWrapping="Wrap" />

        <Button
            x:Name="Enregistrer"
            Width="186"
            Height="35"
            Margin="558,24,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="Red"
            BorderBrush="Red"
            Click="Enregistrer_Click"
            Content="Enregistrer la réservation"
            FontFamily="Arial Rounded MT Bold"
            Foreground="White" />

        <Button
            x:Name="Client"
            Width="130"
            Height="35"
            Margin="586,74,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="Red"
            BorderBrush="Red"
            Click="Client_Click"
            Content="Créer fiche client"
            FontFamily="Arial Rounded MT Bold"
            Foreground="White" />

        <Label
            Margin="10,150,0,0"
            HorizontalAlignment="Left"
            Content="Location" />
        <Rectangle
            Width="802"
            Margin="0,176,0,0"
            HorizontalAlignment="Center"
            Stroke="Black" />

        <DataGrid
            x:Name="dgReserver"
            Margin="0,180,0,0"
            AutoGenerateColumns="False"
            ItemsSource="{Binding Materiels}">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding NomMateriel}"
                    Header="Nom du matériel" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Reference}"
                    Header="Référence" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding PrixJournee}"
                    Header="Prix journée" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding EtatMateriel}"
                    Header="Etat du Materiel" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding TypeMateriel.LibelleType}"
                    Header="Type" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding TypeMateriel.CategorieType}"
                    Header="Catégorie" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding CertificationsDisplay}"
                    Header="Certifications" />

            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</UserControl>
