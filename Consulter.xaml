<UserControl
    x:Class="SAE_201_LOXAM.Consulter"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE_201_LOXAM"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="980"
    Height="434"
    Background="White"
    mc:Ignorable="d">
    <Grid>
        <Grid>
            <TabControl>
                <TabItem Header="Consulter">
                    <Grid Background="#FFFFF8F8">
                        <TextBox
                            x:Name="Filtre"
                            Width="120"
                            Margin="435,10,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            TextChanged="Filtre_TextChanged"
                            TextWrapping="Wrap" />
                        <Label
                            x:Name="Rechercher_materiel"
                            Margin="307,6,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content="Rechercher materiel :" />
                        <Button
                            x:Name="Commentaire"
                            Width="149"
                            Height="41"
                            Margin="772,35,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Background="Red"
                            Content="Ajout commentaire" />
                        <Button
                            x:Name="location"
                            Width="166"
                            Height="43"
                            Margin="601,34,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Background="Red"
                            Click="location_Click"
                            Content="Remettre en location" />

                        <Label
                            x:Name="filtre_label"
                            Margin="0,59,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content="Rechercher par filtre :"
                            RenderTransformOrigin="0.522,-0.461" />
                        <RadioButton
                            Margin="8,85,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content="RadioButton" />
                        <RadioButton
                            Margin="98,85,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content="RadioButton" />
                        <RadioButton
                            Margin="188,85,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content="RadioButton" />
                        <RadioButton
                            Margin="283,85,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content="RadioButton" />
                        <DataGrid
                            x:Name="dgConsulter"
                            Margin="0,113,0,-18"
                            AutoGenerateColumns="False"
                            ItemsSource="{Binding Materiels}">
                            <DataGrid.Columns>
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding NomMateriel}"
                                    Header="Nom du matériel" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Reference}"
                                    Header="Référence" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding PrixJournee}"
                                    Header="Prix journée" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding EtatMateriel}"
                                    Header="Etat du Materiel" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding TypeMateriel.LibelleType}"
                                    Header="Type" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding TypeMateriel.CategorieType}"
                                    Header="Catégorie" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding CertificationsDisplay}"
                                    Header="Certifications" />

                            </DataGrid.Columns>
                        </DataGrid>
                        <Label
                            x:Name="materiel_label"
                            Margin="0,33,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content="Materiel"
                            FontWeight="Bold" />
                    </Grid>
                </TabItem>
                <TabItem Header="Retourner">
                    <Grid Background="#FFE5E5E5">
                        <Grid Background="#FFE5E5E5">
                            <TextBox
                                Width="120"
                                Margin="435,10,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                TextWrapping="Wrap" />
                            <Label
                                x:Name="Rechercher_materiel1"
                                Margin="309,6,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="Rechercher materiel :" />
                            <DataGrid Margin="0,77,0,0" d:ItemsSource="{d:SampleData ItemCount=5}" />
                            <Label
                                x:Name="location_label"
                                Margin="0,48,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="Location"
                                FontWeight="Bold" />
                        </Grid>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>

    </Grid>
</UserControl>
