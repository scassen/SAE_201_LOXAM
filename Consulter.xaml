<UserControl
    x:Class="SAE_201_LOXAM.Consulter"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE_201_LOXAM"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="980"
    Height="434"
    Background="White"
    mc:Ignorable="d">
    <Grid>
        <Grid>
            <TabControl>
                <TabItem Header="Consulter">
                    <Grid Background="#FFFFF8F8">
                        <TextBox
                            x:Name="Filtre"
                            Width="120"
                            Margin="435,10,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            TextChanged="Filtre_TextChanged"
                            TextWrapping="Wrap" />
                        <Label
                            x:Name="Rechercher_materiel"
                            Margin="307,6,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content="Rechercher materiel :" />
                        <Button
                            x:Name="Commentaire"
                            Width="149"
                            Height="41"
                            Margin="772,35,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Background="Red"
                            Content="Ajout commentaire" />
                        <Button
                            x:Name="location"
                            Width="166"
                            Height="43"
                            Margin="601,34,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Background="Red"
                            Click="location_Click"
                            Content="Remettre en location" />

                        <Label
                            x:Name="filtre_label"
                            Margin="0,59,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content="Rechercher par réf :"
                            RenderTransformOrigin="0.522,-0.461" />
                        <RadioButton
                            x:Name="Sans_rd"
                            Margin="8,85,0,0"
                            Checked="RadioButton_Checked"
                            Content="Sans" />
                        <RadioButton
                            x:Name="Essence"
                            Margin="66,85,0,0"
                            Checked="RadioButton_Checked"
                            Content="Essence" />
                        <RadioButton
                            x:Name="rd_Electrique"
                            Margin="132,85,757,298"
                            Checked="RadioButton_Checked"
                            Content="Electrique" />
                        <RadioButton
                            x:Name="rd_BiEnergie"
                            Margin="208,85,0,0"
                            Checked="RadioButton_Checked"
                            Content="Bi energie" />

                        <DataGrid
                            x:Name="dgConsulter"
                            Margin="0,113,0,-18"
                            AutoGenerateColumns="False"
                            ItemsSource="{Binding Materiels}">
                            <DataGrid.Columns>
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding NomMateriel}"
                                    Header="Nom du matériel" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Reference}"
                                    Header="Référence" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding PrixJournee}"
                                    Header="Prix journée" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding EtatMateriel}"
                                    Header="Etat du Materiel" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding TypeMateriel.LibelleType}"
                                    Header="Type" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding TypeMateriel.CategorieType}"
                                    Header="Catégorie" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding CertificationsDisplay}"
                                    Header="Certifications" />

                            </DataGrid.Columns>
                        </DataGrid>
                        <Label
                            x:Name="materiel_label"
                            Margin="0,33,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content="Materiel"
                            FontWeight="Bold" />
                        <RadioButton
                            x:Name="rd_tout"
                            Margin="293,85,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Checked="RadioButton_Checked"
                            Content="Tous"
                            FontWeight="Bold" />
                    </Grid>
                </TabItem>
                <TabItem Header="Retourner">
                    <Grid Background="#FFE5E5E5">
                        <Grid Background="#FFE5E5E5">
                            <TextBox
                                x:Name="filtre2"
                                Width="120"
                                Margin="435,10,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                TextChanged="filtre2_TextChanged"
                                TextWrapping="Wrap" />
                            <Label
                                x:Name="Rechercher_materiel1"
                                Margin="309,6,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="Rechercher materiel :" />
                            <DataGrid
                                x:Name="dgRetourner"
                                Margin="0,79,0,-18"
                                AutoGenerateColumns="False"
                                ItemsSource="{Binding Materiels}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn
                                        Width="*"
                                        Binding="{Binding NomMateriel}"
                                        Header="Nom du matériel" />
                                    <DataGridTextColumn
                                        Width="*"
                                        Binding="{Binding Reference}"
                                        Header="Référence" />
                                    <DataGridTextColumn
                                        Width="*"
                                        Binding="{Binding PrixJournee}"
                                        Header="Prix journée" />
                                    <DataGridTextColumn
                                        Width="*"
                                        Binding="{Binding EtatMateriel}"
                                        Header="Etat du Materiel" />
                                    <DataGridTextColumn
                                        Width="*"
                                        Binding="{Binding TypeMateriel.LibelleType}"
                                        Header="Type" />
                                    <DataGridTextColumn
                                        Width="*"
                                        Binding="{Binding TypeMateriel.CategorieType}"
                                        Header="Catégorie" />
                                    <DataGridTextColumn
                                        Width="*"
                                        Binding="{Binding CertificationsDisplay}"
                                        Header="Certifications" />

                                </DataGrid.Columns>
                            </DataGrid>
                            <Label
                                x:Name="location_label"
                                Margin="0,48,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="Remis en Disponible"
                                FontWeight="Bold" />
                            <Button
                                x:Name="reparer"
                                Width="202"
                                Height="43"
                                Margin="669,17,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Background="Red"
                                Click="reparer_Click"
                                Content="Mettre à réparer"
                                FontSize="22" />
                        </Grid>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>

    </Grid>
</UserControl>
