<UserControl
    x:Class="SAE_201_LOXAM.Consulter"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE_201_LOXAM"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="800"
    Height="385"
    mc:Ignorable="d">
    <Grid>
        <Grid>
            <TabControl>
                <TabItem Header="Consulter">
                    <Grid Background="#FFE5E5E5">
                        <TextBox
                            Width="120"
                            Margin="397,10,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            TextWrapping="Wrap" />
                        <Label
                            x:Name="Rechercher_materiel"
                            Margin="271,6,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content="Rechercher materiel :" />
                        <Button
                            x:Name="Commentaire"
                            Margin="146,33,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Background="Red"
                            Content="Ajout commentaire" />
                        <Button
                            x:Name="location"
                            Margin="521,33,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Background="Red"
                            Content="Remettre en location" />
                        <DataGrid Margin="0,77,0,0" d:ItemsSource="{d:SampleData ItemCount=5}" />
                        <Label
                            x:Name="materiel_label"
                            Margin="0,48,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content="Materiel"
                            FontWeight="Bold" />
                    </Grid>
                </TabItem>
                <TabItem Header="Retourner">
                    <Grid Background="#FFE5E5E5">
                        <Grid Background="#FFE5E5E5">
                            <TextBox
                                Width="120"
                                Margin="397,10,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                TextWrapping="Wrap" />
                            <Label
                                x:Name="Rechercher_materiel1"
                                Margin="271,6,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="Rechercher materiel :" />
                            <DataGrid Margin="0,77,0,0" d:ItemsSource="{d:SampleData ItemCount=5}" />
                            <Label
                                x:Name="location_label"
                                Margin="0,48,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="Location"
                                FontWeight="Bold" />
                        </Grid>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>
        <Rectangle Margin="0,-12,0,0" Stroke="Black" />
    </Grid>
</UserControl>
