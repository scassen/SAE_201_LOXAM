<Window
    x:Class="SAE_201_LOXAM.Connexion"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE_201_LOXAM"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Connexion"
    Width="800"
    Height="450"
    Icon="/IMG/256x256bb.jpg"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Rectangle
            Width="800"
            Height="52"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Fill="#FFFF3636" />
        <Image
            Width="245"
            Height="63"
            Margin="0,-3,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Source="/IMG/f567c238ffb4f0ab7644d64aec5e1ce6863c2271.png"
            Stretch="Fill" />
        <TextBox
            x:Name="identifier_box"
            Width="196"
            Height="28"
            Margin="0,123,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            FontSize="10"
            TextWrapping="Wrap" />
        <Label
            x:Name="Identifiant_label"
            Margin="0,92,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Content="Identifiant"
            FontSize="18"
            FontWeight="Bold" />
        <Label
            x:Name="Mdp_label"
            Margin="0,183,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Content="Mot de passe"
            FontSize="18"
            FontWeight="Bold" />
        <TextBox
            x:Name="mdp_box"
            Width="196"
            Height="30"
            Margin="0,222,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            FontSize="10"
            TextWrapping="Wrap" />
        <Button x:Name="Button_Valider"
            Width="122"
            Margin="0,329,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Background="Red"
            Content="Valider"
            FontSize="24" Click="Button_Valider_Click" />

    </Grid>
</Window>
