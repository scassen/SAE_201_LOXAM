<UserControl
    x:Class="SAE_201_LOXAM.Fiche_Client"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE_201_LOXAM"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignWidth="800"
    mc:Ignorable="d" Height="392">
    <Grid Background="White">

        <Label
            x:Name="Créer_label"
            Margin="287,13,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="CREER FICHE CLIENT"
            FontSize="24" />
        <Label
            x:Name="Nom_label"
            Width="139"
            Height="38"
            Margin="166,57,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Nom client : "
            FontSize="22" />
        <Label
            x:Name="prenom_label"
            Margin="502,56,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Prénom client :"
            FontSize="22" />
        <TextBox
            x:Name="nom_client_box"
            Width="180"
            Margin="145,100,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#FFFBF8F8"
            FontSize="20"
            TextWrapping="Wrap" />
        <TextBox
            x:Name="prenom_client_box"
            Width="180"
            Margin="489,96,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#FFFBF8F8"
            FontSize="20"
            TextWrapping="Wrap" />
        <Label
            x:Name="Certification_label"
            Width="148"
            Height="37"
            Margin="329,172,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Certification : "
            FontSize="22" />
        <CheckBox
            x:Name="interne_check"
            Margin="289,225,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Interne" />
        <CheckBox
            x:Name="CACES_R486_check"
            Margin="362,225,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="CACES_R486"
            RenderTransformOrigin="0.261,-0.883" />
        <CheckBox
            x:Name="CACES_R482_check"
            Margin="460,225,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="CACES_R482" />
        <Button
            x:Name="btnCreerClient"
            Width="150"
            Height="40"
            Margin="0,268,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Background="Red"
            Click="btnCreerClient_Click"
            Content="Créer le client" />

    </Grid>
</UserControl>
