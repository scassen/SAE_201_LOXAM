<Window
    x:Class="SAE_201_LOXAM.Commentaire"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE_201_LOXAM"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Commentaire"
    Width="862"
    Height="525"
    mc:Ignorable="d" WindowStyle="None" ResizeMode="NoResize" Icon="/IMG/256x256bb.jpg" WindowStartupLocation="CenterScreen">
    <Grid Margin="-42,0,0,-27" Background="White">
        <TextBlock
            Margin="257,57,257,429"
            FontSize="16"
            Text="{Binding NomMateriel}" />
        <Rectangle
            Width="904"
            Height="71"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Fill="#FFFF3636" />
        <Image
            Width="370"
            Height="95"
            Margin="0,-12,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Source="/IMG/f567c238ffb4f0ab7644d64aec5e1ce6863c2271.png"
            Stretch="Fill" />
        <Label
            x:Name="Com_label"
            Margin="0,107,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Content="Ajout d'un commentaire"
            FontSize="24"
            FontWeight="Bold" />
        <Rectangle
            Width="562"
            Height="199"
            Margin="0,163,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Fill="WhiteSmoke"
            Stroke="Black"
            StrokeThickness="3" />
        <Button x:Name="Valider_button" Content="Valider" HorizontalAlignment="Center" Margin="0,417,0,0" VerticalAlignment="Top" Background="#FFF90000" BorderBrush="White" Height="49" Width="198" FontSize="24" FontWeight="Bold" Click="Valider_button_Click"/>

    </Grid>
</Window>
