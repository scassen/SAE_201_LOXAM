<Window
    x:Class="SAE_201_LOXAM.Commentaire"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE_201_LOXAM"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Commentaire"
    Width="945"
    Height="527"
    mc:Ignorable="d" ResizeMode="NoResize" Icon="/IMG/256x256bb.jpg" WindowStartupLocation="CenterScreen">
    <Grid Margin="0,0,0,-27" Background="White">
        <TextBlock x:Name="nommateriel"
            Margin="257,83,257,397"
            FontSize="24"
            Text="{Binding NomMateriel}" FontWeight="Bold" TextAlignment="Center" />
        <Rectangle
            Width="945"
            Height="61"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Fill="#FFFF3636" />
        <Image
            Width="370"
            Height="95"
            Margin="-36,-12,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Source="/IMG/f567c238ffb4f0ab7644d64aec5e1ce6863c2271.png"
            Stretch="Fill" />
        <Label
            x:Name="Com_label"
            Margin="0,151,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Content="Ajout d'un commentaire"
            FontSize="24"
            FontWeight="Bold" />
        <Rectangle
            Width="562"
            Height="199"
            Margin="0,208,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Fill="WhiteSmoke"
            Stroke="Black"
            StrokeThickness="3" />
        <Button x:Name="Valider_button" Content="Valider" HorizontalAlignment="Center" Margin="0,426,0,0" VerticalAlignment="Top" Background="#FFF90000" BorderBrush="White" Height="49" Width="198" FontSize="24" FontWeight="Bold" Click="Valider_button_Click"/>
        <TextBox HorizontalAlignment="Center" Margin="0,208,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="562" Height="199" Background="{x:Null}" BorderThickness="10,10,10,10" BorderBrush="{x:Null}" FontSize="16"/>

    </Grid>
</Window>
