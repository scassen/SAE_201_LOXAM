<UserControl
    x:Class="SAE_201_LOXAM.Enregistrer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE_201_LOXAM"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="371"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Margin="0,92,0,0" Background="White">
        <TextBox
            Width="120"
            Margin="10,220,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="TextBox"
            TextWrapping="Wrap" />
        <TextBox
            Width="120"
            Margin="170,220,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="TextBox"
            TextWrapping="Wrap" />
        <Label
            Margin="10,192,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Label" />
        <Label
            Margin="170,194,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Label" />
        <DataGrid
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            ItemsSource="{Binding SingleMaterielList}" Margin="0,-29,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding NomMateriel}"
                    Header="Nom du matériel" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Reference}"
                    Header="Référence" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding PrixJournee}"
                    Header="Prix journée" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding EtatMateriel}"
                    Header="Etat du Materiel" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding TypeMateriel.LibelleType}"
                    Header="Type" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding TypeMateriel.CategorieType}"
                    Header="Catégorie" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding CertificationsDisplay}"
                    Header="Certifications" />

            </DataGrid.Columns>
        </DataGrid>
        <DatePicker
            x:Name="DateDebut"
            Width="120"
            Margin="12,36,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            SelectedDateChanged="Date_SelectedDateChanged"
            Text="" />
        <DatePicker
            x:Name="DateFin"
            Width="120"
            Margin="209,36,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            SelectedDateChanged="Date_SelectedDateChanged"
            Text="" />
        <Label
            Margin="12,12,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="date de debut" />
        <Label
            Margin="209,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="date de fin" />
        <TextBlock
            Width="295"
            Height="99"
            Margin="495,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Background="#FFDCCFCF"
            Text="{Binding selectedMateriel.Descriptif}"
            TextWrapping="Wrap" />
        <TextBlock
            Width="180"
            Margin="515,222,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#FFA79595"
            Text="{Binding EstDisponible}"
            TextWrapping="Wrap" Height="22" />
        <Button
            Width="120"
            Height="42"
            Margin="362,212,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#FFE22E2E"
            Click="Button_Click"
            Content="Valider" FontSize="20" />


    </Grid>
</UserControl>
