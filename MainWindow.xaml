<Window
    x:Class="SAE_201_LOXAM.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE_201_LOXAM"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="Acceuil"
    Title="Accueil"
    Width="800"
    Height="450"
    HorizontalAlignment="Center"
    VerticalAlignment="Center"
    HorizontalContentAlignment="Center"
    VerticalContentAlignment="Center"
    Icon="/IMG/256x256bb.jpg"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d" Activated="Acceuil_Activated">
    <Grid>
        <ContentControl x:Name="MainContent" Margin="0,52,0,0" />


        <Grid
            Width="829"
            Height="110"
            Margin="-29,-16,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top">

            <Rectangle
                Width="800"
                Height="52"
                Margin="29,16,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Fill="#FFFF3636" />
        </Grid>

        <Button
            x:Name="Reserver"
            Grid.Column="1"
            Width="73"
            Height="36"
            Margin="351,8,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#FFFF3636"
            BorderBrush="White"
            Click="Reserver_Click"
            Content="Reserver"
            Foreground="White"
            RenderTransformOrigin="0.5,0.5">

            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <RotateTransform />
                    <TranslateTransform X="-5" />
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button
            x:Name="Vérifier"
            Grid.Column="1"
            Width="73"
            Height="36"
            Margin="444,8,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#FFFF3636"
            BorderBrush="White"
            Click="Vérifier_Click"
            Content="Vérifier"
            Foreground="White"
            RenderTransformOrigin="0.5,0.5">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <RotateTransform />
                    <TranslateTransform X="-5" />
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button
            x:Name="Consulter"
            Grid.Column="1"
            Width="75"
            Height="36"
            Margin="533,8,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#FFFF3636"
            BorderBrush="White"
            Click="Consulter_Click"
            Content="Consulter"
            Foreground="White"
            RenderTransformOrigin="0.5,0.5">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <RotateTransform />
                    <TranslateTransform X="-5" />
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button
            x:Name="Se_connecter"
            Width="163"
            Height="36"
            Margin="624,8,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="White"
            BorderBrush="White"
            Click="Se_connecter_Click"
            Content="Se connecter"
            Foreground="Black"
            RenderTransformOrigin="0.5,0.5">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <RotateTransform />
                    <TranslateTransform X="-5" />
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Image
            Width="245"
            Height="63"
            Margin="0,-3,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Source="/IMG/f567c238ffb4f0ab7644d64aec5e1ce6863c2271.png"
            Stretch="Fill" />
        <Label
            x:Name="Bienvenue_label"
            Width="819"
            Height="297"
            Margin="-19,73,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            FontFamily="Bahnschrift SemiBold"
            FontSize="72"
            RenderTransformOrigin="0.496,0.531"
            Tag="MainTag" BorderBrush="Black" Content="Bienvenue chez loxam" />
        <Button
            x:Name="Acceuil_button"
            Width="108"
            Height="36"
            Margin="218,8,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#FFFFFBFB"
            BorderBrush="{x:Null}"
            Content="Accueil"
            Foreground="#FFFD0000"
            RenderTransformOrigin="0.5,0.5" Click="Acceuil_button_Click">

            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <RotateTransform />
                    <TranslateTransform X="-5" />
                </TransformGroup>
            </Button.RenderTransform>
        </Button>

    </Grid>
</Window>
